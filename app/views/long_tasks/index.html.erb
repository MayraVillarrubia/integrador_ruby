<p id="notice"><%= notice %></p>

<h1>Long Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Percentage completion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @long_tasks.each do |long_task| %>
      <tr>
        <td><%= long_task.percentage_completion %></td>
        <td><%= link_to 'Show', long_task %></td>
        <td><%= link_to 'Edit', edit_long_task_path(long_task) %></td>
        <td><%= link_to 'Destroy', long_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Long Task', new_long_task_path %>
