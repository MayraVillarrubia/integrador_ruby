<h2> Crear Lista </h2>
<%= form_tag({:controller => "lists", :action => "index"}, :method => "post") do %>
  <%= label_tag "Nombre lista" %>
  <%=text_field_tag "nombre", "", :size => 20, :maxlenght => 20, :placeholder => "Introduzca un nombre", :required => "required" %>
    <br />
    <%= submit_tag "Crear lista" %>
  <% end %>

